<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.sagacity</groupId>
  <artifactId>sagacity-db-diversity</artifactId>
  <version>4.1.3</version>
  <build>
    <resources>
      <resource>
        <filtering>true</filtering>
        <directory>src/main/java</directory>
        <includes>
          <include>**/*.ftl</include>
          <include>**/*.xml</include>
          <include>**/*.properties</include>
        </includes>
      </resource>
      <resource>
        <filtering>true</filtering>
        <directory>src/main/resources</directory>
        <includes>
          <include>META-INF/sagacity-diversity.xsd</include>
          <include>log4j2.xml</include>
        </includes>
      </resource>
    </resources>
    <finalName>sagacity-diversity-${project.version}</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-source-plugin</artifactId>
        <version>3.2.0</version>
        <executions>
          <execution>
            <id>attach-sources</id>
            <goals>
              <goal>jar</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.1.1</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>org.sagacity.quickvo.QuickVOStart</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <id>sagframe-release</id>
      <name>sagframe-release</name>
      <url>http://www.sagframe.com/nexus/repository/sagframe-release</url>
    </repository>
    <repository>
      <id>nexus-aliyun</id>
      <name>Nexus aliyun</name>
      <url>http://maven.aliyun.com/nexus/content/groups/public</url>
    </repository>
  </repositories>
  <distributionManagement>
    <repository>
      <id>nexus-release</id>
      <name>3rd party</name>
      <url>https://nexus.1chemic.com/repository/releases/</url>
    </repository>
    <snapshotRepository>
      <id>nexus-snapshots</id>
      <name>Department 
			Repository</name>
      <url>https://nexus.1chemic.com/repository/snapshots/</url>
    </snapshotRepository>
  </distributionManagement>
  <properties>
    <freemarker.version>2.3.29</freemarker.version>
    <jdk.version>1.8</jdk.version>
    <log4j.version>2.13.0</log4j.version>
    <commons-beanutils.version>1.9.4</commons-beanutils.version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
</project>
